extends layout

block content
  div.w3-container
    h1 Lista de Classes nível 1
    table.w3-table.w3-striped
        tr
          th Código
          th Título
        for c in classes
          tr
            td
              a(href='/' + c.codigo)= c.codigo
            td= c.titulo
  div.w3-container.w3-light-grey
    p 
      footer
        a(class='w3-button w3-round-large w3-border' href='/') Início
      