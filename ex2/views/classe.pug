extends layout

block content
  div.w3-container
    h2= 'Nivel ' + classe.nivel + ' - ' + classe.titulo
    p
      b= 'Status: ' + classe.status
    p= classe.descricao
    if classe.filhos.length > 0
      h3 Lista de descendentes
      table.w3-table.w3-striped
          tr
            th Código
            th Título
          for f in classe.filhos 
            tr
              td
                a(href='/' + f.codigo)= f.codigo
              td= f.titulo
    else
      if classe.nivel != 3
        h3 Esta classe não tem descendentes
    if classe.nivel == 3
      h3 Lista de termos de índice
      table.w3-table.w3-striped
          ul
          for f in classe.termosInd 
            li 
              a(href='/termos')= f.termo
  div.w3-container.w3-light-grey
    p 
      footer
        a(class='w3-button w3-round-large w3-border' href='/') Início
      
      
    